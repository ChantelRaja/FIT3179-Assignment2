{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json" ,
    "width": 600,
    "height": 300,
    "title": "Frequent Times of Collisions" ,
    "data":{
        "url":"https://raw.githubusercontent.com/ChantelRaja/FIT3179-Assignment2/main/Data/Vis3Data.csv"
    },
    "params":[
        {
            "name": "year",
            "bind":{
                "input": "select",
                "options":[
                    null,
                    "2001","2002","2003","2004","2005","2006","2007","2008","2009",
                    "2010","2011","2012","2013","2014","2015","2016","2017","2018"
                ],
                "labels":[
                    "Show All",
                    "2001","2002","2003","2004","2005","2006","2007","2008","2009",
                    "2010","2011","2012","2013","2014","2015","2016","2017","2018"
                ],
                "name":"Year Selection  "
            }
        }
    ],
    "transform": [
        {"filter":"year == null || datum.Year == year"}
    ],
    "mark":{
        "type":"square",
        "size": 400
    },
    "encoding":{
        "y":{
            "field": "Month",
            "type":"nominal",
            "axis":{"grid":false, "labelAngle":0},
            "sort":["Jan", "Feb", "Mar", "Apr", "May", "Jun", "Jul", "Aug", "Sep", "Oct", "Nov", "Dec"]
        },
        "x":{
            "field": "Hour",
            "type":"quantitative",
            "title": "Time of Day",
            "axis":{"grid":false}
        },
        "color":{
            "aggregate":"count",
            "type": "quantitative",
            "title": "Collisions",
            "scale":{"scheme":["#b2d8d8","#004c4c"]},
            "legend":{"orient": "bottom"}
        },
        "tooltip":[
            {"aggregate":"count","type": "quantitative","title":"Collisions"},
            {"field": "Month","type":"nominal"},
            {"field": "Hour", "type":"quantitative","title": "Time of Day"}
        ]
    },
    "config":{}
}