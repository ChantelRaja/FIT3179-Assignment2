{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json" ,
    "width": 400,
    "height": 600,
    "title": "Severity of Collisions at Speed Limits",
    "data":{
        "url": "https://raw.githubusercontent.com/ChantelRaja/FIT3179-Assignment2/main/Data/Vis2Data.csv"
    },
    "params":[
        {
            "name": "year",
            "bind":{
                "input": "select",
                "options":[
                    null,
                    "2001","2002","2003","2004","2005","2006","2007","2008","2009",
                    "2010","2011","2012","2013","2014","2015","2016","2017","2018"
                ],
                "labels":[
                    "Show All",
                    "2001","2002","2003","2004","2005","2006","2007","2008","2009",
                    "2010","2011","2012","2013","2014","2015","2016","2017","2018"
                ],
                "name":"Year Selection  "
            }
        }
    ],
    "transform": [
        {"filter":"year == null || datum.Year == year"}
    ],
    "encoding":{
        "x":{
            "field": "Speed Limit",
            "type": "ordinal",
            "axis":{"labelAngle":0},
            "sort": ["0 - 50 km/h","60 km/h","70 km/h","80 - 90 km/h","100 - 110 km/h"]
        },
        "y":{
            "aggregate": "count",
            "field": "Speed Limit",
            "type":"nominal",
            "title": "Collisions"
        }
    },
    "layer":[
        {
            "mark": {
                "type":"bar"
            },
            "encoding": {
                "color":{
                    "field": "Severity",
                    "type":"nominal",
                    "scale":{
                        "domain":[
                            "Fatality",
                            "Serious Injury",
                            "Minor Injury",
                            "Property Damage"
                        ],
                        "range":[
                            "#006666",
                            "#008080",
                            "#66b2b2",
                            "#b2d8d8"
                        ]
                    },
                    "sort": ["Fatality","Serious Injury","Minor Injury","Property Damage"],
                    "legend":{"orient": "top-right"}
                },
                "tooltip":[
                    {"field": "Speed Limit", "type":"nominal"},
                    {"aggregate": "count", "field": "Speed Limit", "type":"quantitative", "title": "Collisions"},
                    {"field": "Severity", "type": "nominal"}
                ]
            }
        },
        {
            "mark":{
                "type":"text",
                "align":"center",
                "baseline":"middle",
                "dy": -10,
                "fontSize": 12,
                "fontStyle":"italic",
                "fontWeight":200
            },
            "encoding": {
                "text":{"aggregate": "count", "field": "Speed Limit", "type":"quantitative"},
                "color":{"value":"black"}
            }
        }
    ]
        

}